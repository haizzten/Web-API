@model f7.Models.ItemDetailModels

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>

<body>

    <h4>ItemDetailModels</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ItemId" class="control-label"></label>
                    <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ConsignmentId" class="control-label"></label>
                    <input asp-for="ConsignmentId" class="form-control" />
                    <span asp-validation-for="ConsignmentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CostPrice" class="control-label"></label>
                    <input asp-for="CostPrice" class="form-control" />
                    <span asp-validation-for="CostPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Manufacturer" class="control-label"></label>
                    <input asp-for="Manufacturer" class="form-control" />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ManufacturingDate" class="control-label"></label>
                    <input asp-for="ManufacturingDate" class="form-control" />
                    <span asp-validation-for="ManufacturingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExpiresDate" class="control-label"></label>
                    <input asp-for="ExpiresDate" class="form-control" />
                    <span asp-validation-for="ExpiresDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="button-anchor" asp-action="Index">Về danh sách</a>
    </div>

</body>

</html>
